<UserControl x:Class="DrivingEasy.Components.QuestionDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrivingEasy.Components"
             >
    <Grid>
        <StackPanel>
            <Image x:Name="QuestionImage" Height="400" Width="600"/>
            <TextBlock x:Name="QuestionDescription" TextWrapping="Wrap" Margin="5"/>
            <ItemsControl x:Name="AnswersList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <RadioButton Content="{Binding Answers.Decription}" 
                         GroupName="AnswersGroup"
                         Checked="Answer_Checked"
                         Tag="{Binding IsRight}"
                         x:Name="AnswerRadioButton"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </Grid>
</UserControl>
