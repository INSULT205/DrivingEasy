<Window x:Class="DrivingEasy.Windows.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrivingEasy.Windows"
        mc:Ignorable="d"
         WindowStyle="None" WindowStartupLocation="CenterScreen"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="EditUserWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.ColumnSpan="2">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                    <GradientStop Color="#85FF6F" Offset="1" />
                    <GradientStop Color="#E40045" Offset="0" />
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>

        <Grid Grid.Row="3" Grid.ColumnSpan="2">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                    <GradientStop Color="#85FF6F" Offset="1" />
                    <GradientStop Color="#E40045" Offset="0" />
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>

        <TextBlock
            Foreground="White"
            Grid.ColumnSpan="2"
            Margin="10"
            FontSize="40"
            Text="Редактирование пользователя"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"/>
        
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBox x:Name="SurnameTB"
              Style="{StaticResource MaterialDesignOutlinedTextBox}"
              materialDesign:HintAssist.Hint="Фамилия"/>
            <TextBox x:Name="NameTB"
               Margin="0 5 0 0"
               Style="{StaticResource MaterialDesignOutlinedTextBox}"
               materialDesign:HintAssist.Hint="Имя"/>
            <TextBox x:Name="PatronymicTB"
              Margin="0 5 0 0"
              Style="{StaticResource MaterialDesignOutlinedTextBox}"
              materialDesign:HintAssist.Hint="Отчество"/>
            <TextBox x:Name="PhoneTB"
               Margin="0 5 0 0"
               Style="{StaticResource MaterialDesignOutlinedTextBox}"
               materialDesign:HintAssist.Hint="Телефон"
               PreviewTextInput="RegexValidation"/>
            <TextBox x:Name="EmailTB"
              Margin="0 5 0 0"
               Style="{StaticResource MaterialDesignOutlinedTextBox}"
               materialDesign:HintAssist.Hint="Email"/>
            <TextBox x:Name="PasswordTB"
                  Margin="0 5 0 0"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 materialDesign:HintAssist.Hint="Пароль"/>
            <ComboBox x:Name="RoleCB" 
                SelectionChanged="RoleCB_SelectionChanged" 
                DisplayMemberPath="Name"
                Margin="0 5 0 0"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                materialDesign:HintAssist.Hint="Роль"/>
            <ComboBox x:Name="GroupCB" DisplayMemberPath="Name"
                Margin="0 5 0 0"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                materialDesign:HintAssist.Hint="Группа"/>
            <StackPanel Orientation="Horizontal" Margin="0 5 0 0">
                <CheckBox x:Name="IsBlockedCB"/>
                <TextBlock Text="Заблокирован"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10"
                     VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border BorderThickness="2"
                  CornerRadius="2"
                  Height="150"
                  Width="150"
                  BorderBrush="#cf3539">
                <Image 
                   Source="{Binding PhotoPath}"
                   x:Name="UserPhoto"
                   Height="150"
                   Width="150"/>
            </Border>
            <Button
                x:Name="ChangePhotoBT"
                Click="ChangePhotoBT_Click"
                Margin="0 10 0 10"
                 Foreground="Black"
 Background="#85FF6F"
                Content="Изменить фотографию"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button
                 x:Name="BackBT"
                 Foreground="Black"
 Background="#85FF6F"
                 Click="BackBT_Click"
                 Margin="10"
                 Width="100"
                 Content="Вернуться"/>
            <Button
                x:Name="SaveBT"
                Click="SaveBT_Click"
                 Foreground="Black"
 Background="#85FF6F"
                Margin="10"
                Width="250"
                Content="Сохранить изменения"/>
        </StackPanel>
    </Grid>
</Window>
