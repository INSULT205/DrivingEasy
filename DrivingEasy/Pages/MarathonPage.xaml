<Page x:Class="DrivingEasy.Pages.MarathonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DrivingEasy.Pages"
      mc:Ignorable="d" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MarathonPage">

    <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled" HorizontalAlignment="Center">
                <WrapPanel x:Name="QuestionsWp" Margin="10"/>
            </ScrollViewer>

            <Frame Grid.Row="1"
            x:Name="QuestionsFr" />

            <Button Name="ExitBT" 
                Content="Выйти"
                Grid.Row="2"
                Width="150"
                HorizontalAlignment="Center"
                Margin="5"
                Click="ExitBT_Click"/>
    </Grid>
</Page>
